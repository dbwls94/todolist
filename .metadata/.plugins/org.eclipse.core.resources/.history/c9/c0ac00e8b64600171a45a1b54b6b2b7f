(function (window) {
	'use strict';

	// Your starting point. Enjoy the ride!
	
	//현재 적용된 필터 -> all
	//전체 리스트 호출
	
})(window);

//insert todo
$('.new-todo').keyup(function (e){
	if(e.keyCode == 13){
		if($(this).val() == ''){
			alert('add your todo!');
			return;
		}
		
		var todoCont = $(this).val();
		
		$.ajax({
			  type: "POST",
			  url: "/api/todo",
			  data: todoCont,
			  success: function(data){
				  //add to '.todo-list'
				  $('.todo-list').append('<li>' + todoCont + '</li>');
				  
				  //'' item left++
				  
			  },
			  dataType: 'json'
		});
	}
	
})