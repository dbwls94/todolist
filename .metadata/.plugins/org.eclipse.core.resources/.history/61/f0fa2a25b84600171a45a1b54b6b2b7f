(function (window) {
	'use strict';

	// Your starting point. Enjoy the ride!
	
	//현재 적용된 필터 -> all
	//전체 리스트 호출
	
})(window);

//insert todo
$('.new-todo').keyup(function (e){
	if(e.keyCode == 13){
		if($(this).val() == ''){
			alert('add your todo!');
			return;
		}
		
		var todoCont = $(this).val();
		
		$.ajax({
			  type: "POST",
			  url: "/api/todo",
			  data: todoCont,
			  success: function(data){
				  console.log('in');
				  //add to '.todo-list'
				  if($('#all').hasClass('selected') || $('#active').hasClass('selected')){
					  $('.todo-list').append('<li><div class="view" id="' + data.id + '"><input class="toggle" type="checkbox"><label>' + data.todo + '</label><button class="destroy"></button></div></li>');
				  }
				  
				  //'' item left++
				  
			  },
			  dataType: 'json'
		});
	}
	
})