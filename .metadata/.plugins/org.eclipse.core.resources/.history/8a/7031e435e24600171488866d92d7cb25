(function (window) {
	'use strict';

	// Your starting point. Enjoy the ride!
	
	//현재 적용된 필터 -> all
	//전체 리스트 호출
	
})(window);

//insert todo
$('.new-todo').keyup(function (e){
	if(e.keyCode == 13){
		
		var todoData = new Object();
        todoData.todo = $(this).val();
        

        
		//var todoCont = $(this).val();
		
		if(todoData.todo == ''){
			alert('add your todo!');
			return;
		}
		$(this).val('');
		//var todoData = {'todo' : todoCont};
	
		console.log(todoData.todo);
		$.ajax({
			  type: "POST",
			  url: "/api/todo",
			  data: todoData.todo,
			  success: function(data1){
				  console.log(data1);
				  //add to '.todo-list'
				  if($('#all').hasClass('selected') || $('#active').hasClass('selected')){
					  $('.todo-list').prepend('<li><div class="view" id="' + data1.id + '"><input class="toggle" type="checkbox"><label>' + data1.todo + '</label><button class="destroy"></button></div></li>');
				  }
				  
				  //'' item left++
				  
			  }
		});
		
		//'.new-todo' 자리 다시 빈 문자열로 갱신
		//$('.new-todo').val() = '';
	}
	
})